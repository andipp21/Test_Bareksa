<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_header_company"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="@dimen/margin_horizontal_company_item"
    app:cardBackgroundColor="@color/green_50"
    app:cardCornerRadius="4dp">

    <LinearLayout
        android:id="@+id/layout_header_company"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="start"
        android:minWidth="102dp"
        android:orientation="vertical"
        android:padding="@dimen/padding_header_company">

        <ImageView
            android:id="@+id/company_logo"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:contentDescription="@string/company_logo" />

        <TextView
            android:id="@+id/company_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/padding_content_text" />

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>